
<div class="container-fluid">
    <h1 class="display-2 text-center">Admin Console</h1>
</div>

{{#each errorMessage}}
  <div class="alert alert-danger container" role="alert">
    {{this}}
  </div>
{{/each}}

<div class="container">
<form action="/admin" method="post" enctype="multipart/form-data">
  <div class="mb-3 mt-3">
    <label class="form-label">Name:</label>
    <input type="text" class="form-control" id="email" name="mediaName" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Description:</label>
    <input type="text" class="form-control" id="pwd" name="description" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Genre:</label>
    <input type="text" class="form-control" id="pwd" name="genre" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Year:</label>
    <input type="number" class="form-control" id="pwd" name="year" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Creator:</label>
    <input type="text" class="form-control" id="pwd" name="creator" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Category:
      <select name="mediaType">
        <option>Select One</option>
        <option>Album</option>
        <option>Serie</option>
        <option>Videogame</option>
        <option>Movie</option>
        <option>Book</option>
      </select>
    </label>
  </div>
  <div class="mb-3">
    <label>Image:
      <input type="file" name="imageUrl" accept=".jpg, .jpeg" >
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>

</div>