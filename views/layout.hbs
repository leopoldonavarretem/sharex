<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <body>
      <nav class="p-3 bg-dark text-white">

        <div class="container">
          <div class="row">

            <div class="col-sm-12 col-lg-8">
              <ul class="nav">
                  <li><a href="/" class="navbar-brand text-white">Sharex</a></li>
                  
                  <li><a href="/media?mediaType=Movie" class="nav-link text-white">Movies</a></li>

                  <li><a href="/media?mediaType=Album" class="nav-link text-white">Albums</a></li>

                  <li><a href="/media?mediaType=Serie" class="nav-link text-white">Series</a></li>

                  <li><a href="/media?mediaType=Videogame" class="nav-link text-white">Videogames</a></li>

                  <li><a href="/media?mediaType=Book" class="nav-link text-white">Books</a></li>


                  
              </ul>
            </div>
 
            <div class="col-sm-12 col-lg-4">
                {{#unless userData}}
                  <a href="/auth/login"><button type='button' class="btn btn-primary">Login</button></a>
                  <a href="/auth/signup"><button type='button' class="btn btn-secondary">Sign Up</button></a>
                
                {{else}}
                
                  {{#if userData.admin}}
                  <a href="/admin"><button type='button' class='btn btn-info'>Admin</button></a>
                  {{/if}}
                  <a href="/auth/logout"><button type="button" class="btn btn-warning">Logout</button></a>
                {{/unless}}
            </div>
          </div>
        </div>
      </nav>

    {{{body}}}

  </body>

</html>